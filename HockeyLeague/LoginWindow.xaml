<Window x:Class="HockeyLeague.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HockeyLeague"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid >
        <TextBox x:Name="txtLogin" HorizontalAlignment="Left" Height="23" Margin="132,47,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="132,94,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="LoginBtn" Content="Button" HorizontalAlignment="Left" Margin="196,200,0,0" VerticalAlignment="Top" Width="76" Click="LoginBtn_Click"/>
    </Grid>
</Window>
